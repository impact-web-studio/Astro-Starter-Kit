---
import '../../../public/styles/css/header.css';
import { client } from '../../_data/client.js';
---

<!-- Main Navigation -->
<header id='iws-navigation'>
	<div class='iws-container'>
		<!--Nav Logo-->
		<!--Logo is turned white in the css with a filter on dark mode-->
		<a
			href=''
			class='iws-logo'
			aria-label='back to home'
		>
			<img
				src={client.links.logo}
				alt='logo'
				width='250'
				height='30'
				aria-hidden='true'
				decoding='async'
			/>
		</a>
		<!--Navigation List-->
		<nav
			class='iws-nav'
			role='navigation'
		>
			<!--Mobile Nav Toggle-->
			<button
				class='iws-toggle'
				aria-label='mobile menu toggle'
			>
				<div
					class='iws-box'
					aria-hidden='true'
				>
					<span
						class='iws-line iws-line1'
						aria-hidden='true'
					></span>
					<span
						class='iws-line iws-line2'
						aria-hidden='true'
					></span>
					<span
						class='iws-line iws-line3'
						aria-hidden='true'
					></span>
				</div>
			</button>
			<!-- We need a wrapper div so we can set a fixed height on the iws-ul in case the nav list gets too long from too many dropdowns being opened and needs to have an overflow scroll. This wrapper acts as the background so it can go the full height of the screen and not cut off any overflowing nav items while the iws-ul stops short of the bottom of the screen, which keeps all nav items in view no matter how mnay there are-->
			<div class='iws-ul-wrapper'>
				<ul
					id='iws-expanded'
					class='iws-ul'
					aria-expanded='false'
				>
					<li class='iws-li'>
						<a
							href='/'
							class='iws-li-link iws-active'
						>
							Home
						</a>
					</li>
					<li
						class='iws-li iws-dropdown'
						tabindex='0'
					>
						<span class='iws-li-link'>
							About
							<img
								class='iws-drop-icon'
								src='https://csimg.nyc3.cdn.digitaloceanspaces.com/Icons/down-gold.svg'
								alt='dropdown icon'
								width='15'
								height='15'
								decoding='async'
								aria-hidden='true'
							/>
						</span>
						<ul class='iws-drop-ul'>
							<li class='iws-drop-li'>
								<a
									href='/about'
									class='iws-li-link iws-drop-link'
									>About Us</a
								>
							</li>
							<li class='iws-drop-li'>
								<a
									href='/about/faqs'
									class='iws-li-link iws-drop-link'
									>FAQs</a
								>
							</li>
							<li class='iws-drop-li'>
								<a
									href='/about/reviews'
									class='iws-li-link iws-drop-link'
									>Reviews</a
								>
							</li>
						</ul>
					</li>
					<!--Copy and paste this iws-dropdown list item and replace any .iws-li with this iws-dropdown group to make a new dropdown and it will work-->
					<li
						class='iws-li iws-dropdown'
						tabindex='0'
					>
						<span class='iws-li-link'>
							Services
							<img
								class='iws-drop-icon'
								src='https://csimg.nyc3.cdn.digitaloceanspaces.com/Icons/down-gold.svg'
								alt='dropdown icon'
								width='15'
								height='15'
								decoding='async'
								aria-hidden='true'
							/>
						</span>
						<ul class='iws-drop-ul'>
							<li class='iws-drop-li'>
								<a
									href='/services/design'
									class='iws-li-link iws-drop-link'
									>Web Design</a
								>
							</li>
							<li class='iws-drop-li'>
								<a
									href='/services/apps'
									class='iws-li-link iws-drop-link'
									>Web Apps</a
								>
							</li>
							<li class='iws-drop-li'>
								<a
									href='/services/integrations'
									class='iws-li-link iws-drop-link'
									>Software Integrations</a
								>
							</li>
							<li class='iws-drop-li'>
								<a
									href='/services/seo'
									class='iws-li-link iws-drop-link'
									>SEO</a
								>
							</li>
						</ul>
					</li>
					<li class='iws-li'>
						<a
							href='/pricing'
							class='iws-li-link'
						>
							Pricing
						</a>
					</li>
					<li class='iws-li'>
						<a
							href='/blog'
							class='iws-li-link'
						>
							Blog
						</a>
					</li>
					<li class='iws-li'>
						<a
							href='/contact'
							class='iws-li-link'
						>
							Contact
						</a>
					</li>
				</ul>
			</div>
		</nav>
		<div class='iws-contact-group'>
			<a
				href=`tel:${client.phone}`
				class='iws-phone'
			>
				<img
					class='iws-phone-icon'
					src='https://csimg.nyc3.cdn.digitaloceanspaces.com/Icons/phone-1a.svg'
					alt='logo'
					width='24'
					height='24'
					aria-hidden='true'
					decoding='async'
				/>
				{client.phone}
			</a>
			<div class='iws-social'>
				<a
					href={client.socials.facebook}
					class='iws-social-link'
				>
					<img
						class='iws-social-icon'
						src='https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/facebook-1a.svg'
						alt='logo'
						width='12'
						height='12'
						aria-hidden='true'
						decoding='async'
					/>
				</a>
				<a
					href=''
					class='iws-social-link'
				>
					<img
						class='iws-social-icon'
						src='https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/twitter-1a.svg'
						alt='logo'
						width='12'
						height='12'
						aria-hidden='true'
						decoding='async'
					/>
				</a>
				<a
					href={client.socials.instagram}
					class='iws-social-link'
				>
					<img
						class='iws-social-icon'
						src='https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/instagram1a.svg'
						alt='logo'
						width='12'
						height='12'
						aria-hidden='true'
						decoding='async'
					/>
				</a>
				<a
					href=''
					class='iws-social-link'
				>
					<img
						class='iws-social-icon'
						src='https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/youtube1a.svg'
						alt='logo'
						width='12'
						height='12'
						aria-hidden='true'
						decoding='async'
					/>
				</a>
			</div>
		</div>
